{
  "name": "worker-desktop",
  "productName": "worker-desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "electron/src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "worker": "node workerBuild/main.js",
    "format": "prettier --write \"**/*.ts\"",
    "worker-start": "ts-node -r tsconfig-paths/register worker/src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "keywords": [],
  "author": "codeforges",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "worker/src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "worker_desktop"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "workerdesktop"
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0-beta.6",
    "@nestjs/core": "^5.0.0-beta.6",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/testing": "^5.0.0-beta.6",
    "@nestjs/websockets": "^5.0.0-beta.6",
    "@types/cheerio": "^0.22.7",
    "@types/lodash": "^4.14.109",
    "axios": "^0.17.1",
    "cheerio": "^1.0.0-rc.2",
    "colors": "^1.1.2",
    "electron": "^2.0.5",
    "electron-compile": "^6.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "fastify-formbody": "^2.0.0",
    "lodash": "^4.17.10",
    "moment": "^2.20.1",
    "process-argv": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "simplecrawler": "^1.1.6",
    "snoowrap": "^1.15.2",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.0.4",
    "twitter": "^1.7.1",
    "typescript": "^2.6.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "2.0.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "eslint-plugin-react": "^7.10.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/socket.io": "^1.4.33",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  }
}
